**************************Decode C***********************************
#include <stdio.h>

int main() {
    char str[1000];
    int c=0,i=0;
	scanf("%s",str);
	while(str[i])
	{
	    if(str[i]<='9' && str[i]>='0')
	        c=c*10+str[i]-'0';
	    else
	    {
	        while(c--)
	            printf("%c",str[i]); 
	        c=0;
	    }
        i++;
	}
}
