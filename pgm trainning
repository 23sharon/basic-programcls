***************************************ALTERNATE THE DIGITS WITHOUT USING DIGITS***************



   ***********************Encode C**************************************8
 #include <stdio.h>

int main() {
	char str[100];
	int c=0,i=0;
	scanf("%s",str[i])
	while(str[i])
	{
	    if(str[i]<='9'&&str[i]>='0')
	        c=c*10+str[i]
	}
	return 0;
}

